#include <iostream>
#include <fstream>
#include <string>
#include <vector>
#include <cctype>
#include <algorithm>

using namespace std;
int digitos(vector<int> v, int ini, int fin)
{
    int mid = (ini + fin) / 2;
    int max_Izq = 0;
    int max_Der = 0;

    if (ini >= fin)
    {
        return v[mid];
    }

    max_Izq = digitos(v, ini, mid);
    max_Der = digitos(v, mid + 1, fin);
    return max(max_Izq, max_Der);
}

int max_posicion(vector<int> v, int primero)
{
    for (int i = 0; i < v.size(); i++)
    {
        if (v[i] == primero)
        {
            return i;
        }
    }
    return 0;
}
int voltage(vector<int> v)
{

    int primero = digitos(v, 0, v.size() - 2);
    int pos = max_posicion(v, primero);
    primero *= 10;
    int segundo = digitos(v, pos + 1, v.size() - 1);
    int res = primero + segundo;
    return res;
}

int main()
{
    string linea;
    ifstream archivo("jolts.txt");
    if (!archivo.is_open())
    {
        cout << "No se pudo abrir el archivo." << endl;
        return 1;
    }

    long long bateria = 0;

    while (getline(archivo, linea))
    {
        if (linea.empty())
            continue; // por si hay líneas vacías

        vector<int> v;
        v.reserve(linea.length());

        for (int i = 0; i < (int)linea.length(); i++)
        {
            if (isdigit(linea[i])) // por si hubiera algún carácter raro
                v.push_back(linea[i] - '0');
        }

        if (v.size() >= 2)
        {
            bateria += voltage(v);
            cout << bateria << "\n";
        }
    }
    archivo.close();
    cout << "Bateria total: " << bateria << endl;
    return 0;
}

